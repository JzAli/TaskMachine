{
  "name": "ai-builder-dashboard",
  "version": "1.0.0",
  "description": "AI Builder Dashboard desktop application",
  "main": "app/main/main.js",
  "author": "AI Builder",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config vite.config.js",
    "dev:electron": "wait-on http://127.0.0.1:5173 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "vite build --config vite.config.js"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "chokidar": "^3.5.3",
    "electron": "^27.1.0",
    "fs-extra": "^11.2.0",
    "keytar": "^7.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vite": "^4.5.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.aibuilder.dashboard",
    "files": ["app/main/**", "app/renderer/dist/**", "package.json"],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
